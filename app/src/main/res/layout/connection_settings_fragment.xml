
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kiksoft.yanmenu.ayarlar.baglantiayarlarim.BaglantiAFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/header_connection_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAĞLANTI AYARLARIM"
            android:textColor="@color/colorBlack"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/detail_connection_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kurumunuzda kullanılan ip adresi ve uygulamanız ile ilgili vvvb...."
            android:textColor="@color/colorSecondaryText"
            android:textSize="11dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardList_connection_settings_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="1dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bağlantı Adresi (ip)"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/txt_connectionsettings_ip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:hint="192.168.12.2:8080 vb. ip adresinizi girin"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="12dp" />

                        <!--android:inputType="number"-->
                        <!--android:digits="0123456789."-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bağlantı Adresi 2 (ip)"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/txt_connectionsettings_ip2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:hint="Dış ip adresinizi girin"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="12dp" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Uygulama Yılı/Veritabanı"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/txt_connectionsettings_db"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:hint="kik/kik5000.nsf vb. uygulamanın veritabanı girin"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="12dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardList_connection_settings_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/contact_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end">

                        <Button
                            android:id="@+id/btn_test_connectionsettings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:padding="12dp"
                            android:text="Test Et"
                            android:textColor="@color/colorWhite" />

                        <Button
                            android:id="@+id/btn_save_connectionsettings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:padding="12dp"
                            android:text="Kaydet"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>




                </androidx.cardview.widget.CardView>

            </LinearLayout>




    </RelativeLayout>


</LinearLayout>